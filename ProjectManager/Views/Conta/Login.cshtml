@model LoginViewModel


<div class="text-center">
    <h1 class="display-4"></h1>
</div>

<div class="sidenav">
    <div class="login-main-text">
        <h2 style="color:white;">ProPlan<br>Gerenciador de Projetos</h2>
        <p>Entre ou cadastre para obter acesso.</p>
    </div>
</div>
<br />
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form asp-controller="Conta" asp-action="Login" method="post" role="form">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="social-login">
                    <button class="btn facebook-btn social-btn" type="button"><span><i class="fab fa-facebook-f"></i> Cadastrar com Facebook</span> </button>
                    <button class="btn google-btn social-btn" type="button"><span><i class="fab fa-google-plus-g"></i> Cadastrar com Google+</span> </button>
                </div>
                <br />
                <div class="form-group">
                    <label>Usuario</label>
                    <input asp-for="Usuario" class="form-control" placeholder="Digite seu usuário">
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                    @Html.ValidationMessageFor(x => x.Usuario)
                </div>
                <div class="form-group">
                    <label>Senha</label>
                    <input asp-for="Senha" class="form-control" placeholder="Digite sua senha">
                    <span asp-validation-for="Senha" class="text-danger"></span>
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <br />
                <button type="submit" id="sumit" class="btn btn-info" value="Login">Login</button>
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Cadastro", "Conta")'">Cadastro</button>
            </form>
        </div>
    </div>
</div>
