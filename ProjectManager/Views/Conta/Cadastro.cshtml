@model LoginViewModel

@if (TempData["ErroCadastro"] != null)
{
	<div class="alert alert-dismissible alert-danger">
		<button type="button" class="close" data-bs-dismiss="alert">&times;</button>
		@TempData["ErroCadastro"]
	</div>
}

@if (TempData["SucessoCadastro"] != null)
{
	<div class="alert alert-dismissible alert-success">
		<button type="button" class="close" data-bs-dismiss="alert">&times;</button>
		@TempData["SucessoCadastro"]
	</div>
}


<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<div class="container" style="margin-top:40px">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<strong> Cadastre-se para continuar</strong>
				</div>
				<div class="panel-body">
					<form asp-controller="Conta" asp-action="Cadastro" method="post">
						<fieldset>
							<div class="row">
								<div class="center-block">
									<img class="profile-img"
										 src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12 col-md-10  col-md-offset-1 ">
									<div class="form-group">
										<div class="input-group">
											<span class="input-group-addon">
												<i class="glyphicon glyphicon-user"></i>
											</span>
											@* <input asp-for="Usuario" class="form-control" placeholder="Usuário" name="loginname" autofocus>	 *@
											<input asp-for="Usuario" class="form-control">
										</div>
										@Html.ValidationMessageFor(x => x.Usuario)
									</div>
									<div class="form-group">
										<div class="input-group">
											<span class="input-group-addon">
												<i class="glyphicon glyphicon-lock"></i>
											</span>
											@* <input asp-for="Senha" class="form-control" placeholder="Usuário" name="password" value=""> *@
											<input type="password" asp-for="Senha" class="form-control">
										</div>
										@Html.ValidationMessageFor(x => x.Senha)
									</div>
									<div class="form-group">
										<button type="submit" class="btn btn-lg btn-primary btn-block">Cadastrar</button>
									</div>
								</div>
							</div>
						</fieldset>
					</form>
				</div>
				<div class="panel-footer ">
					Descubra o poder de uma gestão eficaz!
				</div>
			</div>
		</div>
	</div>
</div>