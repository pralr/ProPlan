@model ProjectManager.Models.Projeto

@{
    ViewData["Title"] = "Excluir projeto";
}

<br/><br/>
<div class="card text-white bg-danger mb-3" style="max-width: 100rem;">
    <div class="card-header">Você tem certeza que deseja apagar o projeto?</div>
    <div class="card-body">
       @*  <h4 class="card-title">Pense direitinho!</h4> *@
        <p class="card-text">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @{
                        var enumStatus = (ProjectManager.Enums.EnumStatusProjeto)Model.Status;
                        var descricaoStatus = ProjectManager.Models.Projeto.GetDescription(enumStatus);
                        @descricaoStatus
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataInicio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataInicio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataTermino)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataTermino)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Responsavel)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Responsavel)
                </dd>
            </dl>

            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Sim, quero excluir o projeto." class="btn btn-secondary" />
                <a class="btn btn-info" asp-action="Index">Voltar para lista</a>
            </form>
        </p>
    </div>
</div>